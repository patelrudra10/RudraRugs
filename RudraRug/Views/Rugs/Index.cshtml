@model RudraRug.Models.RugPropertyViewModel

@{
    ViewData["Title"] = "Index";
}
<style>
    p {
        font-size: 20px;
    }
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Rugs" asp-action="Index" method="get">
    <p>
        <select asp-for="RugProperty" asp-items="Model.Property">
            <option value="">All</option>
        </select>

        Manufacturer: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rugs[0].Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rugs[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rugs[0].Origin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rugs[0].Property)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rugs[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rugs[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rugs[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Rugs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Manufacturer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Material)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Origin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Property)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
